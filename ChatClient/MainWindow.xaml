<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="167*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="bConnDiscon" Click="Button_Click" Content="Connect" Margin="10,10,418,0" Height="64" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <TextBox x:Name="tbMessage" Margin="10,0,10,10" TextWrapping="Wrap" Text="" Height="101" VerticalAlignment="Bottom" Grid.ColumnSpan="2" KeyDown="tbMessage_KeyDown"/>
        <ListBox x:Name="lbChat" Margin="10,79,10,116" Grid.ColumnSpan="2"/>
        <TextBox x:Name="tbUserName" Margin="0,10,10,0" TextWrapping="Wrap" Text="Имя юзера" VerticalAlignment="Top" Height="64" Grid.Column="1" HorizontalAlignment="Right" Width="400"/>

    </Grid>
</Window>
